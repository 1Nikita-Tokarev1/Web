            <!-- Метка и поле для ввода адреса электронной почты -->
            <label for="email">Email:</label>
            <input type="text" id="email" name="email"><br><br>
            <!-- "input" с "type" равным "submit" создает кнопку отправки формы. "value" определяет текст на кнопке. -->
            <input type="submit" value="Отправить">
